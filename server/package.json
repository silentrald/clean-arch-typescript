{
  "name": "node-sample",
  "version": "1.0.0",
  "main": "app.js",
  "license": "MIT",
  "scripts": {
    "dev": "ts-node-dev -r tsconfig-paths/register src/app",
    "build": "tsc",
    "start": "node dist/app",
    "devtest": "nodemon -e ts,spec.ts --exec 'yarn test && ts-node -r tsconfig-paths/register' src/app",
    "test": "yarn test:unit && yarn test:int",
    "test:unit": "jest --color --silent --testPathPattern=test/unit",
    "test:int": "jest --runInBand --color --testPathPattern=test/int",
    "db-up": "node migrations/up",
    "db-down": "node migrations/down",
    "db-insert": "node migrations/insert",
    "db-delete": "node migrations/delete",
    "db-reset": "yarn db-down && yarn db-up && yarn db-insert"
  },
  "dependencies": {
    "ajv": "^8.6.2",
    "ajv-formats": "^2.1.1",
    "babel-jest": "^27.0.6",
    "bcrypt": "^5.0.1",
    "body-parser": "^1.19.0",
    "connect-redis": "^5.1.0",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "csurf": "^1.11.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-handlebars": "^5.2.1",
    "express-session": "^1.17.1",
    "ioredis": "^4.24.2",
    "module-alias": "^2.2.2",
    "morgan": "^1.10.0",
    "nodemailer": "^6.5.0",
    "pg": "^8.5.1",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.14.7",
    "@types/bcrypt": "^3.0.0",
    "@types/body-parser": "^1.19.0",
    "@types/connect-redis": "^0.0.16",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.10",
    "@types/csurf": "^1.11.1",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.11",
    "@types/express-handlebars": "^3.1.0",
    "@types/express-session": "^1.17.3",
    "@types/ioredis": "^4.22.0",
    "@types/jest": "^26.0.24",
    "@types/mongoose": "^5.10.4",
    "@types/morgan": "^1.9.2",
    "@types/nodemailer": "^6.4.1",
    "@types/pg": "^7.14.11",
    "@types/supertest": "^2.0.11",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^4.18.0",
    "@typescript-eslint/parser": "^4.18.0",
    "eslint": "^7.22.0",
    "jest": "^27.0.6",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "supertest": "^6.1.3",
    "ts-jest": "^27.0.3",
    "ts-node": "^9.1.1",
    "ts-node-dev": "^1.1.6",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.2.3"
  },
  "jest": {
    "transform": {
      "^.+\\.[t|j]s?$": "babel-jest"
    }
  },
  "_moduleAliases": {
    "@mw": "dist/mw",
    "@intf": "dist/intf",
    "@modules": "dist/modules",
    "@models": "dist/models",
    "@db": "dist/db/index",
    "@logger": "dist/logger/index",
    "@redis": "dist/redis/index"
  }
}
